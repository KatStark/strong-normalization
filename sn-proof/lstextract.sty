\def\recordfile#1{appendtofile@seen@#1}
\def\srecordfile#1{\expandafter\csname appendtofile@seen@#1\endcsname}
\def\defrecordfile#1{%
  \expandafter\def\csname appendtofile@seen@#1\endcsname{defined}
}

\def\lstsettings{}
\def\lstextrset#1{%
  \renewcommand{\lstsettings}{#1}
}

